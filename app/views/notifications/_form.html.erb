<div class="notification_form">
  <% if @notification.errors.present? %>
    <ul>
      <% @notifcation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

   <%= form_with model: @notification, local: true do |f| %>
    <div class="form_group">
      <%= f.label "タイトル" %>
      <%= f.text_field :title %>
    </div>
    <div class="form_group">
      <%= f.label "内容" %>
      <%= f.text_field :body %>
    </div>
      <%= f.submit '投稿' %>
    <% end %>
</div>
