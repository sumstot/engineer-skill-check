<div class="notification_index">
  <% if current_user.employee_notification_auth %>
    <p class="new_notification"><%= link_to '新規追加', new_notification_path(@notification), class: 'btn' %></p>
  <% end %>

  <table class="notification_table">
    <thead>
      <th>タイトル</th>
    </thead>
    <tbody>

      <% @notifications.each do |notification| %>
        <tr><%= render "notification", notification: notification %></tr>
      <% end %>
    </tbody>
  </table>

</div>
